@using WebBanHangOnline.Common
@{
    ViewBag.Title = SettingHelper.GetValue("SettingTitleSeo").ToString();
    ViewBag.SeoDescription = SettingHelper.GetValue("SettingTitleSeo").ToString();
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<!-- Thư viện SwiperJS -->
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<!-- Slider -->

<div class="swiper-container main_slider">
    <div class="swiper-wrapper">
        <div class="swiper-slide" style="background-image:url(img/slide_1.jpg)">
            <div class="container fill_height">
                <div class="row align-items-center fill_height">
                    <div class="col">
                        <div class="main_slider_content">
                            <h6>Mang Thiên Nhiên Đến Góc Nhà Của Bạn</h6>
                            <h1>Khám Phá Ưu Đãi Mới!</h1>
                            <div class="red_button shop_now_button"><a href="/san-pham">Mua Ngay</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="swiper-slide" style="background-image:url(img/slide_2.jpg)"></div>
        <div class="swiper-slide" style="background-image:url(img/slide_3.jpg)"></div>
    </div>
    <!-- Nút điều khiển slider -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
</div>


@section Scripts {
    <script>
        var swiper = new Swiper('.main_slider', {
            // Thiết lập các tùy chọn của slider ở đây
            loop: true, // Cho phép lặp lại slider
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            autoplay: {
                delay: 3000, // Độ trễ giữa các slide (ms)
            },
        });
    </script>
}

<style>
    /* CSS cho ẩn hiện button khi hover */
    .main_slider {
        position: relative;
        width: 100%;
        height: 500px; /* Điều chỉnh chiều cao slider cho phù hợp */
    }

    .swiper-button-prev,
    .swiper-button-next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 1000; /* Đảm bảo nút điều khiển hiển thị trên slider */
        cursor: pointer;
    }

    .main_slider:hover .swiper-button-prev,
    .main_slider:hover .swiper-button-next {
        opacity: 1;
    }
</style>



<!-- Banner -->
@Html.Action("MenuProductCategory", "Menu")

<!-- New Arrivals -->

<div class="new_arrivals">
    <div class="container">
        @Html.Action("MenuArrivals", "Menu")
